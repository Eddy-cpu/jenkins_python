podTemplate(containers: [
  containerTemplate(
    name: 'python', 
    image: 'jenkins/inbound-agent-python:latest', 
    command: 'sleep',
    args: '30d')
]) 
{
  node(POD_LABEL)
  {
    stage('Get Python')
    {
      container('python')
      {
          stage('Menu Selection')
          {
    sh 'apt update'
    sh 'apt install -y nano'
    echo 'Y'
    sh 'apt install -y pip'
    echo 'Y'
    sh 'apt install python3'
    sh 'python3 MenuSelection.py'
          }
}
}
}
}
